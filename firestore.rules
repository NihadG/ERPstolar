rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user ID matches the document owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // ORGANIZATIONS
    // ============================================
    
    match /organizations/{orgId} {
      // Only authenticated users can read/write organizations
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // USERS
    // ============================================
    
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated();
      // Users can only write to their own profile
      allow write: if isOwner(userId);
    }
    
    // ============================================
    // PROJECTS
    // ============================================
    
    match /projects/{projectId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // PRODUCTS
    // ============================================
    
    match /products/{productId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // PRODUCT MATERIALS
    // ============================================
    
    match /product_materials/{materialId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // MATERIALS CATALOG
    // ============================================
    
    match /materials/{materialId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // GLASS ITEMS
    // ============================================
    
    match /glass_items/{glassId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // ALU DOOR ITEMS
    // ============================================
    
    match /alu_door_items/{doorId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // OFFERS
    // ============================================
    
    match /offers/{offerId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // OFFER PRODUCTS
    // ============================================
    
    match /offer_products/{offerProductId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // OFFER EXTRAS
    // ============================================
    
    match /offer_extras/{extraId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // ORDERS
    // ============================================
    
    match /orders/{orderId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // ORDER ITEMS
    // ============================================
    
    match /order_items/{itemId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // SUPPLIERS
    // ============================================
    
    match /suppliers/{supplierId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // WORKERS
    // ============================================
    
    match /workers/{workerId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // WORK ORDERS
    // ============================================
    
    match /work_orders/{workOrderId} {
      allow read, write: if isAuthenticated();
    }
    
    // ============================================
    // WORK ORDER ITEMS
    // ============================================
    
    match /work_order_items/{itemId} {
      allow read, write: if isAuthenticated();
    }
  }
}
