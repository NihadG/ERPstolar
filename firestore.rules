rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user ID matches the document owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Get user's organization ID from their profile
    function getUserOrgId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId;
    }
    
    // Check if user belongs to the document's organization
    function isOrgMember() {
      return isAuthenticated() && 
             resource.data.Organization_ID == getUserOrgId();
    }
    
    // Check if new document has correct organization ID
    function hasValidOrgId() {
      return isAuthenticated() && 
             request.resource.data.Organization_ID == getUserOrgId();
    }
    
    // ============================================
    // ORGANIZATIONS
    // ============================================
    
    match /organizations/{orgId} {
      // Users can read their own organization
      allow read: if isAuthenticated() && getUserOrgId() == orgId;
      // Only allow write if user belongs to this organization
      allow write: if isAuthenticated() && getUserOrgId() == orgId;
    }
    
    // ============================================
    // USERS
    // ============================================
    
    match /users/{userId} {
      // Users can read their own profile
      // OR users in the same organization (for worker lists, user pickers, etc.)
      allow read: if isOwner(userId) || 
                     (isAuthenticated() && 
                      get(/databases/$(database)/documents/users/$(userId)).data.Organization_ID == getUserOrgId());
      // Users can only write to their own profile
      allow write: if isOwner(userId);
    }
    
    // ============================================
    // PROJECTS (Multi-tenancy enabled)
    // ============================================
    
    match /projects/{projectId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // PRODUCTS (Multi-tenancy enabled)
    // ============================================
    
    match /products/{productId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // PRODUCT MATERIALS (Multi-tenancy enabled)
    // ============================================
    
    match /product_materials/{materialId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // MATERIALS CATALOG (Multi-tenancy enabled)
    // ============================================
    
    match /materials/{materialId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // GLASS ITEMS (Multi-tenancy enabled)
    // ============================================
    
    match /glass_items/{glassId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // ALU DOOR ITEMS (Multi-tenancy enabled)
    // ============================================
    
    match /alu_door_items/{doorId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // OFFERS (Multi-tenancy enabled)
    // ============================================
    
    match /offers/{offerId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // OFFER PRODUCTS (Multi-tenancy enabled)
    // ============================================
    
    match /offer_products/{offerProductId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // OFFER EXTRAS (Multi-tenancy enabled)
    // ============================================
    
    match /offer_extras/{extraId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // ORDERS (Multi-tenancy enabled)
    // ============================================
    
    match /orders/{orderId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // ORDER ITEMS (Multi-tenancy enabled)
    // ============================================
    
    match /order_items/{itemId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // SUPPLIERS (Multi-tenancy enabled)
    // ============================================
    
    match /suppliers/{supplierId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // WORKERS (Multi-tenancy enabled)
    // ============================================
    
    match /workers/{workerId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // WORKER ATTENDANCE (Multi-tenancy enabled)
    // ============================================
    
    match /worker_attendance/{attendanceId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // WORK ORDERS (Multi-tenancy enabled)
    // ============================================
    
    match /work_orders/{workOrderId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // WORK ORDER ITEMS (Multi-tenancy enabled)
    // ============================================
    
    match /work_order_items/{itemId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // WORK LOGS (Multi-tenancy enabled)
    // ============================================
    
    match /work_logs/{logId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // NOTIFICATIONS (Multi-tenancy enabled)
    // ============================================
    
    match /notifications/{notificationId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
    
    // ============================================
    // TASKS (Multi-tenancy enabled)
    // ============================================
    
    match /tasks/{taskId} {
      allow read: if isOrgMember();
      allow create: if hasValidOrgId();
      allow update, delete: if isOrgMember();
    }
  }
}
